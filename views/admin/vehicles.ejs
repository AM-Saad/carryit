<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <%- include('./includes/styles.ejs') %>
        <link rel="stylesheet" href="/admin/css/driver.css" />

</head>

<body>
    <%- include('./includes/side-nav.ejs') %>
        <div class="wrapper">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <main id="vehicles">
                <section class="head">
                    <div class="flex f-space-between">
                        <h2>الاسطول</h2>
                        <!--Main Actions -->
                        <aside class="flex f-space-between">

                            <a class="btn bg-w toggle-new-item">وسليه جديد</a>
                        </aside>
                    </div>
                </section>
                <section class="search flex ">

                    <input class="form-control" type="text" name="search-name" id="search-name"
                        placeholder="ابحث بالاسم">

                </section>


                <div class="client-info_basics m-large">
                    <div class="new-item-box slideable">
                        <form action="/create-item" method="post" class="inside-wrapper">
                            <div class="form-actions flex f-space-around">
                                <h3>وسليه جديد</h3>
                                <button type="submit" class="btn btn-success save-item">حفظ</button>
                            </div>
                            <i class="fas fa-times close toggle-new-item"></i>
                            <div class="form-group">
                                <label for="name">اسم الوسيله <span class="c-r">*</span></label>
                                <input type="text" id="name" class="form-control" name="name" placeholder="اسم الوسيله">
                            </div>
                            <div class="form-group">
                                <label for="vehicle_type">نوع الوسيله <span class="c-r">*</span></label>
                                <select class="form-control" id="vehicle_type" name="vehicle_type" id="vehicle_type">
                                    <option selected="selected" value="موتوسيكل">موتوسيكل</option>
                                    <option value="عربيه">عربيه</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="active"> نشطه</label>
                                <input type="checkbox" id="active" class="form-control" active="name">
                            </div>
                            <div class="form-group">
                                <label for="fuelliters">سعه التانك </label>
                                <input type="number" id="fuelliters" class="form-control" name="fuelliters"
                                    placeholder="سعه التانك باللتر">
                            </div>
                            <div class="form-group">
                                <label for="fuelcost">تكلفه التانك </label>
                                <input type="number" id="fuelcost" class="form-control" name="fuelcost"
                                    placeholder="تكلفه ملئ التانك">
                            </div>


                            <div class="form-group">
                                <label for="notes">ملحوظه</label>
                                <input type="email" id="notes" class="form-control" name="notes" placeholder="ملحوظه">
                            </div>
                        </form>

                    </div>
                </div>

                <div class="content  g-three">
                    <div class="options">
                        <a href="" class="btn btn-small create-excel">Export <i class="fas fa-file-excel"></i></a>
                        <div>
                            <a class="btn btn-small sub-menu_btn sort-menu_btn p-relative">
                                <i class=" fas fa-filter"></i>
                                ترتيب
                                <ul class="sub-menu">
                                    <li class="btn bg-w sort heigest">Heigest</li>
                                    <li class="btn bg-w sort">Lowest</li>
                                </ul>
                            </a>
                        </div>
                        <a class="btn btn-small m-3 bar-layout p-medium"><i class="fas fa-bars "></i></a>
                        <a class="btn btn-small m-3 grid-layout p-medium"><i class="fas fa-grip-horizontal "></i></a>
                    </div>
                    <div class="content-desc">
                        <span>نوع الوسيله</span>
                        <span>اسم الوسيله </span>
                        <span>المنودب</span>
                        <span>الحاله</span>
                    </div>
                    <div class="items"></div>
                    <img class="loading none" src="/admin/images/loading(3).svg">
                </div>

                <div class="vehicle-fuels slideable ">
                    <div class="inside-wrapper p-large">

                        <div class="form-actions">
                            <i class="fas fa-times close font-xl close-vehicle-fuels"></i>

                            <h4>جميع مصاريف البنزين </h4>
                            <div class="flex">

                                <div class="p-relative">
                                    <a class="btn btn-small sub-menu_btn">ترتيب</a>
                                    <ul class="sub-menu">
                                        <li class="sort-new sort-date">الجديد</li>
                                        <li class="sort-old sort-date">القديم</li>
                                    </ul>
                                </div>
                                <div class="p-relative">
                                    <a class="btn btn-small sub-menu_btn">فلتر</a>
                                    <ul class="sub-menu">
                                        <li class="filter" data-status="4">تم التوصيل</li>
                                        <li class="filter" data-status="5"> مرتجع</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="items"></div>
                            <div class="totals p-medium flex f-space-around">

                            </div>
                        </div>
                    </div>
                </div>

                <div class="vehicle-maintenance info-table slideable ">
                    <div class="inside-wrapper p-large">

                        <div class="form-actions">
                            <i class="fas fa-times close font-xl close-info-table"></i>

                            <h4 class="info-table_heading">جميع مصاريف الصيانه </h4>
                            <div class="flex">

                                <div class="p-relative">
                                    <a class="btn btn-small sub-menu_btn">ترتيب</a>
                                    <ul class="sub-menu">
                                        <li class="sort-new sort-date">الجديد</li>
                                        <li class="sort-old sort-date">القديم</li>
                                    </ul>
                                </div>
                                <div class="p-relative">
                                    <a class="btn btn-small sub-menu_btn">فلتر</a>
                                    <ul class="sub-menu">
                                        <li class="filter" data-status="4">تم التوصيل</li>
                                        <li class="filter" data-status="5"> مرتجع</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="items"></div>
                            <div class="totals p-medium flex f-space-around">

                            </div>
                        </div>
                    </div>
                </div>
                <div class="pop-up_container none" data-form="assignForm" id="create_form">
                    <div class="pop-up_container_form">
                        <i class="fas fa-times close close-form"></i>
                        <form class="assign-shipment">
                            <div class="form-group">
                                <label for="driverNo">اختر المندوب</label>
                                <select name="" id="driverNo">
                                </select>
                            </div>
                            <div class="flex f-end">
                                <button type="submit" class="btn btn-success m-3">تعين</button>
                                <a class="btn btn-danger close-form m-3">اغلاق</a>
                            </div>
                        </form>
                    </div>
                </div>

            </main>

        </div>


        <%- include('./includes/scripts.ejs') %>
            <script src="/admin/modules/components/vehicles.js"> </script>
            <script src="/admin/modules/interface/vehicles.js"> </script>
</body>

</html>